<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="iinode" path="server.js" verb="*" modules="iisnode" />
        </handlers>
	<iisnode nodeProcessCommandLine="%programfiles%\nodejs\node.exe" node_env="production" devErrorsEnabled="false" />
        <rewrite>
            <rules>
                <rule name="DynamicContent">  
                     <conditions>  
                          <add input="{{REQUEST_FILENAME}}" matchType="IsFile" negate="True"/>  
                     </conditions>  
                     <action type="Rewrite" url="server.js"/>  
                </rule> 
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
